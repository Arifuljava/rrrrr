<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/dddddd"

            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_margin="10dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorMeetingInvitationStart"

            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="@dimen/space_50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/lottery"
                    android:foregroundTint="@color/white" />


                <TextView
                    android:id="@+id/lottery_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="Lottery Name : ABC Lottery\n
Lottery Price : X coin\n
Lottery Winner Prize : X coin"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>